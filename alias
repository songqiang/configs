alias e=grep
alias E=emacs
alias f=find
alias g=git
alias G=grep
alias h=head
alias k=kill
alias l=ls
alias m=man
alias p=ps
alias P=python
alias q=grep
alias r=grep
alias s=sort
alias S=sed
alias t=tail
alias T=top
alias u=uniq
