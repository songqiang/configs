[user]
        name = Song, Qiang
        email = keeyang@ustc.edu
[core]
        pager = less -r -F -X
[alias]
        co = checkout
        br = branch
        m = merge
        r = rebase
        ci = commit
        s = status --short
        d = difftool
        l = log --max-count=8 --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        l1 = log --max-count=20 --pretty=oneline --abbrev-commit
        a = add
        unstage = reset HEAD --
        ls = ls-files
[diff]
        tool = vimdiff
[merge]
        tool = vimdiff
        conflictstyle = diff3
[difftool]
        prompt = false
